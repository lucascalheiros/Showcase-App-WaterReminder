<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeekdayCard" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">@color/weekday_stroke_color_selector</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="cardCornerRadius">32dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="checkedIcon">@null</item>
        <item name="checkedIconSize">32dp</item>
        <item name="checkedIconMargin">0dp</item>
        <item name="checkedIconTint">?attr/colorPrimary</item>
    </style>

    <style name="SelectionModeButtons" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:textAppearance">?textAppearanceLabelSmall</item>
        <item name="iconGravity">top</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerLarge</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
    </style>
</resources>