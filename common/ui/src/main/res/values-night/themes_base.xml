<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.WaterReminder" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/indigo_400</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/teal_800</item>
        <item name="colorSurface">@color/teal_900</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Base.Theme.WaterReminder.BottomSheetDialog" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/teal_800</item>
        <item name="colorSurfaceContainerLow">@color/teal_800</item>
        <item name="colorSurface">@color/teal_900</item>
    </style>

    <style name="Theme.WaterReminder.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/teal_800</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.WaterReminder</item>
    </style>

</resources>